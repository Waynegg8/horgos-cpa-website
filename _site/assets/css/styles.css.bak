
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  /* 請將 'YourCustomFont' 替換成您字體的真實名稱，
    並將字體檔案放入 migration_assets/fonts/ 資料夾中。
    如果有多個字體，可以複製下方的 @font-face 區塊。
  */
  @font-face {
    font-family: 'YourCustomFont'; /* <--- 範例字體名稱 */
    src: url('../fonts/your-custom-font.woff2') format('woff2'); /* <--- 範例字體檔名 */
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  body {
    font-family: 'YourCustomFont', 'Noto Sans TC', sans-serif; /* 套用自訂字體，並以思源黑體為備用 */
    @apply bg-slate-50 text-slate-700;
  }

  h1, h2, h3, h4, h5, h6 {
    @apply font-bold text-slate-800;
  }

  /* 其他全域樣式可以在此處添加 */
}
