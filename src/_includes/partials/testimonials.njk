{% if testimonials and testimonials.length > 0 %}
<section class="py-12 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-extrabold text-gray-900 text-center">客戶怎麼說</h2>
    <div class="mt-10 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for item in testimonials %}
      <div class="bg-white p-6 rounded-lg shadow-lg">
        <div class="flex items-start">
          {% if item.photo_url %}
          {# --- 修改點 5: 客戶照片 --- #}
          {# 用一個 div 包裹來控制樣式 #}
          <div class="flex-shrink-0 w-12 h-12 mr-4">
            {% image item.photo_url, item.name, "3rem" %}
          </div>
          {% endif %}
          <div>
            <p class="text-lg font-medium text-gray-900">{{ item.name }}</p>
            <p class="text-sm text-gray-500">{{ item.company }}</p>
          </div>
        </div>
        <blockquote class="mt-4 text-gray-600">
          <p>"{{ item.quote }}"</p>
        </blockquote>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}