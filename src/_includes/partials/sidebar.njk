<aside class="w-full md:w-1/4 p-4">
  {% if category != 'standalone' %}
    <h3 class="text-lg font-semibold mb-4">{{ category | capitalize }} 系列</h3>
    <div class="progress-bar mb-4">
      <div class="progress-fill" style="width: {{ series_progress }};"></div>
    </div>
    <p class="text-sm text-gray-600 mb-4">進度：{{ series_progress }}</p>
  {% endif %}
  <h3 class="text-lg font-semibold mb-4">熱門內容</h3>
  <div class="space-y-4">
    {% for article in collections.articlesPaginated | sortBy('data.clicks') | reverse | slice(0, 3) %}
      <a href="{{ article.url }}" class="card" data-track="article:{{ article.data.slug }}">
        <img src="{{ article.data.image }}" alt="{{ article.data.title }}" class="w-full h-24 object-cover rounded-t-lg">
        <div class="p-2">
          <h4 class="text-sm font-semibold">{{ article.data.title }}</h4>
        </div>
      </a>
    {% endfor %}
  </div>
</aside>
