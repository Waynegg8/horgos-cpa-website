<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex-shrink-0">
        <a href="/" title="{{ site.name }}">
          <img class="h-8 w-auto" src="{{ site.logoPath }}" alt="{{ site.name }} Logo">
        </a>
      </div>

      <nav class="hidden md:flex md:space-x-8 items-center">
        {# 暫時先將「服務項目」連結指向稅務服務頁面 #}
        {% set navPages = [
          { text: '關於我們', url: '/team/' },
          { text: '服務項目', url: '/services/tax/' },
          { text: '最新文章', url: '/articles/' },
          { text: '影音專區', url: '/videos/' },
          { text: '常見問題', url: '/faq/' },
          { text: '資源下載', url: '/downloads/' },
          { text: '聯絡我們', url: '/contact/' }
        ] %}
        {% for page in navPages %}
          <a href="{{ page.url }}" class="font-medium text-gray-500 hover:text-brand-blue-700">{{ page.text }}</a>
        {% endfor %}
        <a href="/appointment/" class="ml-8 px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-brand-blue-700 hover:bg-brand-blue-800">
          預約諮詢
        </a>
      </nav>

      <div class="md:hidden">
        <button type="button" id="mobile-menu-button" class="text-gray-500 hover:text-gray-600 focus:outline-none">
          <span class="sr-only">Open main menu</span>
          <span class="material-icons" id="mobile-menu-icon">menu</span>
        </button>
      </div>
    </div>
  </div>

  <div class="md:hidden hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      {% for page in navPages %}
        <a href="{{ page.url }}" class="text-gray-600 hover:bg-gray-100 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium">{{ page.text }}</a>
      {% endfor %}
    </div>
    <div class="pt-4 pb-3 border-t border-gray-200">
        <div class="px-2">
            <a href="/appointment/" class="block w-full px-4 py-2 text-center text-base font-medium text-white bg-brand-blue-700 hover:bg-brand-blue-800 rounded-md">預約諮詢</a>
        </div>
    </div>
  </div>
</header>