<footer class="bg-gray-800 text-white">
  <div class="container mx-auto py-8 px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      
      <div>
        <h3 class="text-xl font-bold mb-4">{{ site_meta.companyName }}</h3>
        <p class="text-gray-400">{{ site_meta.footerTagline }}</p>
      </div>

      <div>
        <h3 class="text-xl font-bold mb-4">服務項目</h3>
        <ul class="space-y-2 text-gray-300">
          {%- for service in services %}
          <li>
            <a href="/services/#{{ service.id }}" class="hover:text-blue-400">{{ service.title }}</a>
          </li>
          {%- endfor %}
        </ul>
      </div>

      <div>
        <h3 class="text-xl font-bold mb-4">聯繫方式</h3>
        <ul class="space-y-2 text-gray-300">
          <li>地址：{{ site_meta.address }}</li>
          <li>電話：<a href="tel:{{ site_meta.phone | replace('-', '') }}" class="hover:text-blue-400">{{ site_meta.phone }}</a></li>
          <li>營業時間：{{ site_meta.businessHours }}</li>
          <li>
            <a href="{{ site_meta.lineUrl }}" target="_blank" rel="noopener noreferrer" class="hover:text-blue-400">
              LINE ID: {{ site_meta.lineId }}
            </a>
          </li>
        </ul>
      </div>

    </div>
    <div class="mt-8 border-t border-gray-700 pt-4 text-center text-gray-500">
      <p>&copy; {% year %} {{ site_meta.companyName }}. All Rights Reserved.</p>
    </div>
  </div>
</footer>