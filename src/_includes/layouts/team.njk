{% extends "layouts/base.njk" %}

{% block content %}
<article class="prose lg:prose-xl mx-auto px-4 py-8">
  <h1>{{ title }}</h1>
  
  <div class="space-y-12">
    {%- for member in team -%}
    <div class="team-member-card flex flex-col md:flex-row items-start gap-8">
      <div class="md:w-1/3">
        {# --- 修改點 4: 團隊成員照片 --- #}
        {% image member.photo_url, member.name, "(min-width: 768px) 33vw, 100vw" %}
      </div>
      <div class="md:w-2/3">
        <h2 class="text-2xl font-bold">{{ member.name }}</h2>
        <p class="text-lg text-primary-dark font-semibold">{{ member.title }}</p>
        <p>{{ member.bio | safe }}</p>
        
        {% if member.education and member.education.length > 0 %}
        <div class="mt-4">
          <h3 class="font-bold">學歷</h3>
          <ul class="list-disc list-inside">
            {% for edu in member.education %}
            <li>{{ edu }}</li>
            {% endfor %}
          </ul>
        </div>
        {% endif %}

        {% if member.credentials and member.credentials.length > 0 %}
        <div class="mt-4">
          <h3 class="font-bold">專業資格</h3>
          <ul class="list-disc list-inside">
            {% for cred in member.credentials %}
            <li>{{ cred }}</li>
            {% endfor %}
          </ul>
        </div>
        {% endif %}

        {% if member.skills and member.skills.length > 0 %}
        <div class="mt-4 flex flex-wrap gap-2">
          {% for skill in member.skills %}
          <span class="bg-gray-200 text-gray-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded">{{ skill }}</span>
          {% endfor %}
        </div>
        {% endif %}
      </div>
    </div>
    {%- endfor -%}
  </div>

</article>
{% endblock %}