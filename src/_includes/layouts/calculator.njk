---
layout: layouts/base.njk
---
<h1>稅務計算器</h1>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  {% for calculator in calculators %}
    <a href="/calculators/{{ calculator.id }}" class="card" data-track="calculator:{{ calculator.id }}">
      <img src="{{ calculator.image }}" alt="{{ calculator.title }}" class="w-full h-48 object-cover rounded-t-lg">
      <div class="p-4">
        <h3 class="text-lg font-semibold">{{ calculator.title }}</h3>
        <p class="text-gray-600">{{ calculator.description }}</p>
      </div>
    </a>
  {% endfor %}
</div>
<a href="/booking" class="cta-button mt-8 inline-block">預約諮詢</a>
