---
layout: layouts/base.njk
---
<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
  <div class="col-span-2">
    <h1>{{ title }}</h1>
    <img src="{{ image }}" alt="{{ title }}" class="w-full h-64 object-cover rounded-lg mb-4">
    {{ content | safe }}
    {% if relatedFaqs %}
      <h2 class="mt-8">相關常見問題</h2>
      {% for faqId in relatedFaqs %}
        {% for faq in collections.faqsPaginated | filterBy('id', faqId) %}
          <div class="faq-item">
            <div class="faq-question">{{ faq.question }}</div>
            <div class="faq-answer">{{ faq.answer }}</div>
          </div>
        {% endfor %}
      {% endfor %}
    {% endif %}
    <a href="/booking" class="cta-button mt-4 inline-block">預約諮詢</a>
  </div>
  {% include "partials/sidebar.njk" %}
</div>
