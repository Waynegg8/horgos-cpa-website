{% extends "layouts/base.njk" %}

{% block content %}
<div class="bg-white py-16 sm:py-24">
  <div class="container mx-auto px-6 lg:px-8">
    <div class="flex flex-col md:flex-row">
      
      {# 主要內容區 #}
      <div class="w-full md:w-3/4 lg:w-2/3">
        <h1 class="font-heading text-3xl md:text-4xl font-bold">{{ title }}</h1>
        <div class="text-sm text-gray-500 my-4">
          <span>發布於：{{ date | formatDate }}</span> / 
          <span>分類：<a href="/category/{{ category.slug }}" class="text-brand-blue-700 hover:underline">{{ category.name }}</a></span>
        </div>
        
        {# 嵌入影片 #}
        <div class="aspect-w-16 aspect-h-9 rounded-lg overflow-hidden shadow-lg mb-8">
          <iframe src="{{ videoUrl }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>

        {# 影片下方內容 #}
        <div class="prose lg:prose-lg max-w-none">
          {{ content | safe }}
        </div>
      </div>

      {# 側邊欄 #}
      {% include "partials/sidebar.njk" %}

    </div>
  </div>
</div>
{% endblock %}