---
layout: layouts/base.njk
---
<h1>影片總覽</h1>
{% include "partials/search.njk" %}
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  {% for video in pagination.items %}
    <a href="/videos/{{ video.category }}/{{ video.title | slug }}" class="card" data-track="video:{{ video.title | slug }}">
      <img src="{{ video.image }}" alt="{{ video.title }}" class="w-full h-48 object-cover rounded-t-lg">
      <div class="p-4">
        <h3 class="text-lg font-semibold">{{ video.title }}</h3>
        <p class="text-gray-600">{{ video.description | truncate(100) }}</p>
      </div>
    </a>
  {% endfor %}
</div>
{% include "partials/pagination.njk" %}
<a href="/booking" class="cta-button mt-8 inline-block">預約諮詢</a>
