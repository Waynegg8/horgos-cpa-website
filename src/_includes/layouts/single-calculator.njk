---
layout: layouts/base.njk
---
<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
  <div class="col-span-2">
    <h1>{{ title }}</h1>
    <img src="{{ image }}" alt="{{ title }}" class="w-full h-64 object-cover rounded-lg mb-4">
    <p>{{ description }}</p>
    <div id="calculator-form" class="mt-4">
      <div id="calculator-inputs"></div>
      <button id="calculate" class="cta-button">計算</button>
      <div id="calculator-result" class="mt-4"></div>
    </div>
    <a href="/booking" class="cta-button mt-4 inline-block">預約諮詢</a>
  </div>
  {% include "partials/sidebar.njk" %}
</div>
<script src="/assets/js/calculator.js"></script>
