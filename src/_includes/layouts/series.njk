---
layout: layouts/base.njk
---
<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
  <div class="col-span-2">
    <h1>{{ title }} 系列</h1>
    <div class="progress-bar mb-4">
      <div class="progress-fill" style="width: {{ series_progress }};"></div>
    </div>
    <p class="text-sm text-gray-600 mb-4">進度：{{ series_progress }}</p>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {% for article in collections.articlesPaginated | filterBy('data.category', category) %}
        <a href="{{ article.url }}" class="card" data-track="article:{{ article.data.slug }}">
          <img src="{{ article.data.image }}" alt="{{ article.data.title }}" class="w-full h-48 object-cover rounded-t-lg">
          <div class="p-4">
            <h3 class="text-lg font-semibold">{{ article.data.title }}</h3>
            <p class="text-gray-600">{{ article.data.description | truncate(100) }}</p>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
  {% include "partials/sidebar.njk" %}
</div>
