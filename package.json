{
  "name": "horgos-cpa-website",
  "version": "1.0.0",
  "description": "Horgos CPA Website",
  "main": ".eleventy.js",
  "scripts": {
    "clean": "rimraf _site",
    "build:py": "python scripts/process_json.py",
    "build:css": "tailwindcss -i ./assets/css/styles.css -o ./_site/assets/css/styles.css --minify",
    "build:eleventy": "npx @11ty/eleventy",
    "build": "npm run clean && npm run build:py && npm run build:eleventy && npm run build:css",
    "start": "npm run build:py && npm-run-all --parallel start:*",
    "start:eleventy": "npx @11ty/eleventy --serve --quiet",
    "start:css": "tailwindcss -i ./assets/css/styles.css -o ./_site/assets/css/styles.css --watch"
  },
  "keywords": [
    "eleventy",
    "tailwind-css",
    "static-site"
  ],
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "luxon": "^3.4.4",
    "markdown-it-anchor": "^8.6.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.3"
  }
}